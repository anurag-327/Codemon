<html>
    <head>
        <title>Codemon</title>
        <link rel="stylesheet" href="../assets/styles/output.css">
        <!-- <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script> -->
        <!-- <script src="https://unpkg.com/wretch"></script> -->
    </head>
    <body class="bg-yellow-300 ">
        <div class="flex  sm:flex-col sm:w-full sm:gap-0 md:flex-col md:w-full">
            <div class="w-[50%] p-10 border bg-violet-200 border-black sm:w-full md:w-full">
                <span class="text-4xl font-bold">Question</span>
                <p class="mt-4 text-2xl font-bold"><%= question[0].question %></p>
                <div class="mt-2">
                    <span class="font-bold">Your task</span>
                    <p><%= question[0].description %></p>
                </div>
                <div class="w-full mt-4 text-black flex flex-col gap-5">
                    <div class="w-[60%] bg-white  rounded-2xl text-black border-gray-600 p-2 border-2">
                        <div>
                            <span class="font-bold">Input:</span>
                            <span class="block"><%= question[0].input_output.sample1.input1 %></span>
                            
                        </div>
                        <div>
                            <span class="font-bold">Ouput:</span>
                            <span class="block"><%= question[0].input_output.sample2.output2 %></span>
                        </div>
                    </div>
                    <div class="w-[60%] bg-white rounded-2xl  border-gray-600 p-2 border-2">
                        <div>
                            <span class="font-bold">Input:</span>
                            <span class="block"><%= question[0].input_output.sample2.input2 %></span>
                            
                        </div>
                        <div>
                            <span class="font-bold">Ouput:</span>
                            <span class="block"><%= question[0].input_output.sample2.output2 %></span>
                        </div>
                    </div>      
                </div>
                
            </div>
            <div class=" w-[50%] p-6 border flex flex-col border-black sm:w-full  md:w-full">
               <div>
                <span class="text-3xl font-bold">Write Your Code Here</span>
               </div>
               
                <div class=" border-[1.5rem] rounded-2xl border-l-emerald-400 border-r-gray-300 border-t-blue-200 border-b-blue-200 mt-2">
                    <textarea rows="15" spellcheck="false" name="code" id="codebox"  autofocus class=" code w-full p-4 outline-none resize-none  active:border-transparent">#include<bits/stdc++.h>
using namespace std;
int main()
{
        //Write your code here 
        freopen("input.txt","r",stdin);
        cout<<"Hello World";                               
}
                        </textarea>
                    </div>
                    <div class=" w-full float-right mt-2 flex gap-6 justify-end">
                        <button   class="run px-4 hover:shadow-lg hover:scale-105 transform transition duration-300 rounded-md  py-2 bg-blue-400">Run</button>
                        <button class=" p-2 savebtn hover:shadow-lg hover:scale-105 transform transition duration-300 rounded-md bg-red-600 text-white">Save Code</button>
                    </div>
                    <div class="w-[80%]  rounded-xl bg-white h-auto p-4 mt-10 m-auto border-2 border-black shadow-sm ">
                        <span class=" w-full font-bold text-left">INPUT:</span>
                        <div class=" w-[90%]">
                            <textarea rows="6" spellcheck="false" class=" p-2 input resize-none outline-none w-full  whitespace-pre-wrap "></textarea>
                        </div>
                    </div>
                    <div class="w-[80%]  rounded-xl bg-white h-auto p-4 mt-10 m-auto border-2 border-black shadow-sm ">
                        <span class=" w-full font-bold text-left">OUTPUT:</span>
                        <div class=" w-[90%]">
                            <textarea rows="8" spellcheck="false" class="p-2  input output resize-none outline-none w-full  whitespace-pre-wrap "></textarea>
                        </div>
                    </div>
            </div>
        </div>
        <script src="../assets/scripts/index.js"></script>   
    </body>
</html>